body {
    background-color: #0d0d0d;
    color: #e0e0e0;
    font-family: 'Arial', sans-serif;
    margin: 0;
    padding: 20px;
}
header { text-align: center; border-bottom: 2px solid #8b0000; margin-bottom: 40px; }
h1 { color: #ff0000; letter-spacing: 5px; }

.timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
}
.event {
    padding: 20px;
    background: #1a1a1a;
    border-left: 5px solid #8b0000;
    margin-bottom: 20px;
    transition: 0.3s;
    cursor: pointer;
}
.event:hover { background: #333; transform: scale(1.02); }
.year { font-weight: bold; color: #ff4500; font-size: 1.2em; }
.title { font-size: 1.5em; margin: 10px 0; }
const historyData = [
    { year: "1996", title: "バイオハザード", desc: "全ての始まり。洋館事件が発生。" },
    { year: "1998", title: "バイオハザード2 / 3", desc: "ラクーンシティ崩壊。T-ウィルスの脅威が街を覆う。" },
    { year: "2005", title: "バイオハザード4", desc: "レオンが欧州へ。寄生体「プラーガ」との戦い。" },
    { year: "2017", title: "バイオハザード7", desc: "主観視点への刷新。ベイカー邸の惨劇。" },
    { year: "2021", title: "バイオハザード ヴィレッジ", desc: "イーサンの物語の完結。マザー・ミランダとの決戦。" }
];

const timeline = document.getElementById('timeline');

historyData.forEach(item => {
    const div = document.createElement('div');
    div.className = 'event';
    div.innerHTML = `
        <div class="year">${item.year}</div>
        <div class="title">${item.title}</div>
        <p>${item.desc}</p>
    `;
    timeline.appendChild(div);
});
